{
  "name": "sms",
  "private": true,
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"src/sass/**/*.scss\" --syntax scss",
    "eslint": "eslint \"src/js/**/*.js\"",
    "test": "npm run editorconfig && npm run stylelint && npm run eslint",
    "build": "gulp build",
    "start": "npm run build && gulp serve"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "src/**/*.html",
    "src/js/modules/**/*.js",
    "src/sass/*.scss",
    "src/sass/global/**/*.scss",
    "src/sass/blocks/**/*.scss"
  ],
  "eslintIgnore": [
    "vendor/",
    "main.js",
    "vendor.js"
  ],
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "browser-sync": "^2.26.5",
    "del": "^3.0.0",
    "eslint": "^5.16.0",
    "eslint-config-htmlacademy": "^0.5.2",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^7.0.0",
    "gulp-csso": "^3.0.1",
    "gulp-imagemin": "^4.1.0",
    "gulp-newer": "^1.4.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^1.4.0",
    "gulp-rigger": "^0.5.8",
    "gulp-sass": "^4.0.2",
    "gulp-sass-bulk-import": "^1.0.1",
    "gulp-svgstore": "^6.1.1",
    "gulp-tinypng-free": "^1.0.8",
    "gulp-uglify": "^3.0.2",
    "run-sequence": "^2.2.1",
    "stylelint": "^10.0.1",
    "stylelint-config-htmlacademy": "^0.1.3"
  },
  "dependencies": {
    "swiper": "^5.3.0"
  }
}
